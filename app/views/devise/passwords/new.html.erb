<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10 col-md-6 mt-4">
      <h1 style="font-family:Bebas Neue, sans-serif; font-weight: 400; font-style: normal; font-size: 80px;">Mot de passe oubliÃ© ?</h1>
    </div>
    <div class="col-md-6 mt-2 new-card" style="position: relative;">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Envoyer les instructions", class: "btn btn-primary mb-4" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
