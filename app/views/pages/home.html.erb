<h1 class="my-4">Les 6 derniers évènements postés sur la plateforme</h1>

<div class="container">
  <div class="row">
    <% @events.each do |event| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <h5 class="card-title"><%= event.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= event.address %></h6>
            <p class="card-text"><%= event.description %></p>
            <p class="card-text"><strong>Date et heure :</strong> <%= event.date_time.strftime("%d/%m/%Y %H:%M") %></p>
            <p class="card-text"><strong>Ouvert :</strong> <%= event.open ? 'Oui' : 'Non' %></p>
            <p class="card-text"><strong>Utilisateur ID :</strong> <%= event.user_id %></p>
            <a href="<%= event_path(event) %>" class="btn btn-primary mt-3">Voir Détails</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
