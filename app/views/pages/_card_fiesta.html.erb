 <div class="row">
    <% @events.each do |event| %>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="p-4 card-fiesta">
          <% if event.image.attached? %>
            <%= cl_image_tag(event.image.key, class: "img-fluid", style: 'border-radius: 5px;') %>
          <% end %>

          <div class="card-fiesta-infos">
            <div>
              <h2><%= event.name %></h2>
              <p><%= event.address%></p>
              <p><%= event.description%></p>
              <p><strong> Organisateur :</strong> <%= event.user.name %> <%= event.user.firstname %></p>
              <%= link_to 'Voir les dÃ©tails', event_path(event), class: 'button', style: 'padding: 6px 12px; font-size: 14px; margin-top: 30px;' %>
            </div>
            <h3 class="card-fiesta-"><strong> Ouvert :</strong> <%= event.open ? 'Oui' : 'Non' %></h3>
            <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-fiesta-user avatar-bordered" />
          </div>
        </div>
      </div>
    <% end %>
  </div>
