<div class="row">
  <% @reservations.each do |reservation| %>
    <div class="col-lg-4 col-md-6 mb-4">
      <%= link_to event_path(reservation.event), class: '' do %>
        <div class="first evt">
          <% if reservation.event.image.attached? %>
            <%= cl_image_tag(reservation.event.image.key, class: "evt-profile-img") %>
          <% end %>
          <div class="evt-description-bk"></div>
          <p><%= reservation.event.name %></p>
          <div class="evt-description">
            <p><%= reservation.event.name %></p>
          </div>
          <div class="evt-date">
            <p><i class="fa-solid fa-location-dot"></i> <%= reservation.event.location %></p>
            <p><i class="fa-solid fa-calendar-days"></i> <%= I18n.l(reservation.event.date_time, format: :short) %></p>
          </div>
          <div class="evt-btn">
            <h3 class="card-fiesta"><%= reservation.event.open ? 'Places disponibles' : 'Complet' %></h3>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
