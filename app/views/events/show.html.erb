<% content_for :body_class, "show-page" %>

<div class="col-12 container mt-100 rounded-container" style="margin-left: 0; margin-right: 0;">
  <div class="element row mx-0">
    <div class="col-12 col-md-5">
      <% if @event.image.attached? %>
        <%= cl_image_tag(@event.image.key, class: "img-fluid") %>
      <% end %>
    </div>
    <div class="col-12 col-md-6 order-first order-md-last" style="min-height: 250px;">
      <div class="row">
        <div class=""></div>
      </div>
      <div class="text">
        <div class="badge badge-pill badge-primary mb-2">Date <%= @event.date_time.strftime("%d/%m/%Y %H:%M") %></div>
        <h1 class="font-weight-bold"><%= @event.name %></h1>
        <h3 class="text-location mb-2" style="border-color: rgb(255,255,255);">📍 Adresse: <%= @event.location %></h3>
        <h6 class="text-price mb-2">💰 Participation : <%= @event.price %> €</h6>
        <p class="event-organizer">🔡 Organisateur : <%= @event.user.name %> <%= @event.user.firstname %></p>
        <p class="event-status">📄 Inscription en cours : <%= @event.open ? 'Oui' : 'Non' %></p>
        <div class="description"><%= @event.description %></div>
        <a class="btn" role="button" href="<%= events_path %>">Retour à la liste</a>
        <% if @event.user == current_user %>
          <%= form_with url: event_path(@event), method: :delete, class: 'd-inline' do |form| %>
            <%= form.submit "Supprimer l'évènement", class: 'btn' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
