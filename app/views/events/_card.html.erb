<div class="row">
  <% @events.each do |event| %>
    <div class="col-lg-4 col-md-6 mb-4">
      <%= link_to event_path(event), class: '' do %>
        <div class="first evt">
          <% if event.image.attached? %>
            <%= cl_image_tag(event.image.key, class: "evt-profile-img") %>
          <% end %>
          <div class="evt-description-bk"></div>
          <%# <div class="evt-logo">
            <%= image_tag asset_path('LOGO AIR FIESTAS.png'), style: "height:80px; width:80px;" %>
          <%# </div> %>
          <p><%= event.name %></p>
          <div class="evt-description">
            <p><%= event.name %></p>
          </div>
          <div class="evt-date">
            <p><i class="fa-solid fa-location-dot"></i> <%= event.location %></p>
            <p><i class="fa-solid fa-calendar-days"></i> <%= I18n.l(event.date_time, format: :short) %></p>
          </div>
          <div class="evt-btn">
            <h3 class="card-fiesta"><%= event.open ? 'Places disponibles' : 'Complet' %></h3>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
