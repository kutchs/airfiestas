<div class="container">
  <h1 class="my-4" style="font-family: 'Bebas Neue', sans-serif; font-weight: 400; font-style: normal; font-size: 80px;">
    Tous nos Events
  </h1>
</div>

<div class="index-top-card mt-4 p-4 mb-5" style="background-image: url('<%= asset_path('index_image.jpg') %>'); background-size: cover; background-position: center;">
  <div class="container custom-height d-flex justify-content-center align-items-center">
    <div id="cover">
      <%= form_with url: events_path, method: :get, class: "d-flex" do %>

          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Chercher par ville"
          %>
          <div class="td" id="s-cover">
          <%= submit_tag "Go!", name: "", id: "s-circle", class: "btn gradient-text" %>
          </div>

      <% end %>
    </div>
  </div>
</div>


<!-- Fiestas Grid -->
<div class="container mt-5">
  <%= render 'card' %>
</div>
